<div>
  <strong class="font-medium my-6">Dream Logs</strong>

  <%= calendar(events: @journal.dream_logs) do |date, logs| %>
    <%= date %>
    <%= link_to fa_icon('pencil-square-o', class: "dark:text-blue-700"), new_journal_dream_log_path(@journal, :created_at => date) %>
    <% logs.each do |log| %>
      <div id="dream_logs">
        <%= render "dream_logs/dream_log_calendar", dream_log: log %>
      </div>
    <% end %>
  <% end %>
</div>

<hr class="my-4 divider">
<%= render "dream_logs/new", journal: journal %>