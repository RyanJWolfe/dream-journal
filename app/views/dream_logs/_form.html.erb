<%= form_with(model: [journal, dream_log], class: "contents") do |form| %>
  <% if dream_log.errors.any? %>
    <div id="error_explanation" class="error">
      <h2><%= pluralize(dream_log.errors.count, "error") %> prohibited this dream_log from being saved:</h2>

      <ul>
        <% dream_log.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :created_at %>

  <div class="my-5">
    <%= form.label :dream %>
    <%= form.check_box :dream, class: "block mt-2 h-5 w-5" %>
  </div>

  <div class="my-5">
    <%= form.label :remember %>
    <%= form.check_box :remember, class: "block mt-2 h-5 w-5" %>
  </div>

  <div class="my-5">
    <%= form.label :body %>
    <%= form.text_area :body, rows: 4, class: "text-field" %>
  </div>

  <div class="my-5">
    <%= form.label :sleep_time %>
    <%= form.number_field :sleep_time, class: "text-field" %>
  </div>

  <div class="inline">
    <%= form.submit class: "btn-blue" %>
  </div>
<% end %>
