<div id="<%= dom_id dream_log %>" class="flex justify-center">
  <div class="text-sm hidden md:block md:mt-4">
    <% if dream_log.dream == false %>
      <%= link_to fa_icon('times', class: "fa-2x text-red-500 dark:text-red-500 hover:text-red-300 dark:hover:text-red-300"), journal_dream_log_path(dream_log.journal_id, dream_log) %>
    <% elsif dream_log.remember == false %>
      <%= link_to fa_icon('cloud', class: "fa-2x text-gray-300 dark:text-gray-300 hover:text-gray-100 dark:hover:text-white"), journal_dream_log_path(dream_log.journal_id, dream_log) %>
    <% else %>
      <%= link_to fa_icon('cloud', class: "fa-2x text-blue-300 dark:text-blue-500 hover:text-blue-300 dark:hover:text-blue-300"), journal_dream_log_path(dream_log.journal_id, dream_log) %>
    <%  end %>
  </div>
  <div class="md:hidden">
    <% if dream_log.dream == false %>
        <%= link_to fa_icon('circle', class: "text-red-500 dark:text-red-500 hover:text-red-300 dark:hover:text-red-300"), journal_dream_log_path(dream_log.journal_id, dream_log) %>
    <% else %>
      <% if dream_log.remember == false %>
        <%= link_to fa_icon('circle', class: "text-gray-300 dark:text-gray-300 hover:text-gray-100 dark:hover:text-white"), journal_dream_log_path(dream_log.journal_id, dream_log) %>
      <% else %>
        <%= link_to fa_icon('circle', class: "text-blue-300 dark:text-blue-500 hover:text-gray-100 dark:hover:text-white"), journal_dream_log_path(dream_log.journal_id, dream_log) %>
      <%  end %>
    <% end %>
  </div>
</div>